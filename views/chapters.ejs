<%- include('partials/header') %>

  <h1><%=bookName%></h1>
  <h4>Written by <%=authName%></h4>
  <div class="ca">
    <form class="blahform" action="/allnotes" method="post">
      <button type="submit" class="btn btn-warning allbutton" name="bookname" value="<%=bookName%>">Compile all notes</button>
    </form>
    <form class="blahform" action="/bthp" method="post">
      <button type="submit" class="btn btn-secondary allbutton">Back to homepage</button>
    </form>
    <%for(var i=1;i<=chapNo;i++){%>
        <form class="" action="/notes" method="post">
          <%if(tosend[i-1].flag===false){%>
            <button class= "abutton" type="submit" name="chapno" value="<%=i%>">Chapter <%=i%> </button>
          <%}%>
          <%if(tosend[i-1].flag===true){%>
            <button class= "abutton2" type="submit" name="chapno" value="<%=i%>">Chapter <%=i%> </button>
          <%}%>
          <input type="hidden" name="bookname" value="<%=bookName%>">
          <input type="hidden" name="bookid" value="<%=bookid%>">
        </form>
      <hr>
    <%}%>
  </div>


<%- include('partials/footer') %>
